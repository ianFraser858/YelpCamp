<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 id="form-header">Add a New Comment to <%= campground.name %></h1>
        <form id="form-formatting" action="/campgrounds/<%= campground._id %>/comments" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="comment[text]" placeholder="text">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">submit</button> 
            </div>   
        </form>
        <a href="/campgrounds">Go back</a>        
    </div>
</div>
<%include ../partials/footer %>