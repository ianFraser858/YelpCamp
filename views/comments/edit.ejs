<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 id="form-header">Edit Comment in <%= comment %></h1>
        <form id="form-formatting" action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="comment[text]" value="<%=comment.text%>">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">submit</button> 
            </div>
            <div class="form-group">
                <a class="btn btn-lg btn-primary btn-block" href="/campgrounds/<%= campground_id %>">Go back</a>  
            </div>  
        </form>
    </div>
</div>
<%include ../partials/footer %>